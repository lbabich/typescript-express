{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist/platformLocator",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@Config/*": ["./src/util/*"],
      "@Root/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
